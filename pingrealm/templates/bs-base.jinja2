<!DOCTYPE html>
<html lang="en">
<head>
	<meta http-equiv="content-type" content="text/html; charset=UTF-8">
	<meta charset="UTF-8">
	<meta name="description" content="{{ description|default('.') }}">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	{% if noindex %}
		<meta name="robots" content="noindex, nofollow">
	{% endif %}
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
	<link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Open+Sans' type='text/css'>
	<link rel="stylesheet" href="{{ request.static_url('pingrealm:static/css/pr.css') }}">
	{% if nocanonical %}
	{% else %}
		<link rel="canonical" href="{{ request.current_route_url(_scheme='http', _host='hostdown.co') }}">
	{% endif %}
	<title>{{ title }}</title>
	<!--[if lt IE 9]>
	<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
	<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
	<![endif]-->
</head>
<body>
{% if request.registry.settings['ad_top'] %}
	<div class="container">
		<div class="col-md-12">
			<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
			<ins class="adsbygoogle"
			     style="display:inline-block;width:728px;height:90px"
			     data-ad-client="ca-pub-2184633392540689"
			     data-ad-slot="{{ request.registry.settings['ad_top'] }}"></ins>
			<script>
				(adsbygoogle = window.adsbygoogle || []).push({});
			</script>
		</div>
	</div>
{% endif %}

{% block content %}
	<div class="container">
		<p>Empty content block</p>
	</div>
{% endblock %}

{% block footer %}
	<div class="container">
		<div class="col-md-12">
{#			<p align="center" class="small mono">#}
{#				<a href="{{ request.route_url('index') }}" rel="nofollow">home</a> &middot#}
{#				<a href="{{ request.route_url('terms') }}" rel="nofollow">terms</a> &middot#}
{#				<a href="{{ request.route_url('developer') }}" rel="nofollow">api</a> &middot#}
{#				<a href="{{ request.route_url('contact') }}" rel="nofollow">contact</a> &middot#}
{#				<a href="{{ request.route_url('link_stats') }}" rel="nofollow">click counts</a>#}
{#			</p>#}
		</div>
	</div>
{% endblock %}

{% block scripts %}
	<script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
{% endblock %}
{% block ajax %}
{% endblock %}
{% block google %}
	<script type="text/javascript">
		{% include 'pingrealm:static/js/google.js' %}
	</script>
{% endblock %}
{% block twitter %}
	<script type="text/javascript">
		{% include 'pingrealm:static/js/twitter.js' %}
	</script>
{% endblock %}
{% block extra_scripts %}
{% endblock %}
</body>
</html>
